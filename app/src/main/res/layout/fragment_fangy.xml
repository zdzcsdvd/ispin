<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".example.mymvi.FangyFragment">
        <ImageView
            android:id="@+id/im"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ffa"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <com.superluo.textbannerlibrary.TextBannerView
            android:id="@+id/e1"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shop"
            app:layout_constraintLeft_toRightOf="@id/im"
            app:layout_constraintTop_toTopOf="parent"
            app:setDirection="bottom_to_top"></com.superluo.textbannerlibrary.TextBannerView>

        <ImageView
            android:id="@+id/t1"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/so"
            app:layout_constraintLeft_toRightOf="@id/e1"
            app:layout_constraintTop_toTopOf="parent"></ImageView>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab"
            android:background="@color/black"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/t1"
            android:layout_width="match_parent"
            android:layout_height="30dp"></com.google.android.material.tabs.TabLayout>
        <TextView
            android:id="@+id/t3"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="喜剧"
            android:background="#C3C5C3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/t4"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="爱情"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t3"
            app:layout_constraintTop_toTopOf="@id/t3"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/t5"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="家庭"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t4"
            app:layout_constraintTop_toTopOf="@id/t4"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/t6"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="战争"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t5"
            app:layout_constraintTop_toTopOf="@id/t5"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/tt3"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="古装"
            android:background="#C3C5C3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/t3"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/tt4"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="动作"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t3"
            app:layout_constraintTop_toTopOf="@id/tt3"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/tt5"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="军旅"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t4"
            app:layout_constraintTop_toTopOf="@id/tt4"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/tt6"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="剧情"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t5"
            app:layout_constraintTop_toTopOf="@id/tt5"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/ttt3"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="悬疑"
            android:background="#C3C5C3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tt3"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/ttt4"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="犯罪"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t3"
            app:layout_constraintTop_toTopOf="@id/ttt3"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/ttt5"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="伦理"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t4"
            app:layout_constraintTop_toTopOf="@id/ttt4"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/ttt6"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="都市"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t5"
            app:layout_constraintTop_toTopOf="@id/ttt5"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/p3"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="奇幻"
            android:background="#C3C5C3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ttt3"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/p4"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="武侠"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t3"
            app:layout_constraintTop_toTopOf="@id/p3"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/p5"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="历史"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t4"
            app:layout_constraintTop_toTopOf="@id/p4"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <TextView
            android:id="@+id/p6"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="其他"
            android:background="#C3C5C3"
            app:layout_constraintLeft_toRightOf="@id/t5"
            app:layout_constraintTop_toTopOf="@id/p5"
            android:layout_width="80dp"
            android:layout_height="20dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/p3"
            android:id="@+id/r1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="360dp"
            android:layout_height="400dp"></androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>